type Result = variant {
    Ok: text;
    Err: text;
};

type Comment = record {
    author: text;
    content: text;
};

type Article = record {
    title: text;
    date: nat64;
    author: text;
    tags: vec text;
    content: text;
    comments: vec Comment;
};

service : {
    "get_articles": () -> (vec Article) query;
    "add_article": (text, text, vec text, text) -> (Result);
};
